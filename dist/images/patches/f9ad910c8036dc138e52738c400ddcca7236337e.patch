+                    match = xasprintf("ip6 && ip6.dst == %s/%u", buf, plen);
+                    ovn_lflow_add_with_kube_ovn_hint(lflows, od,
+                        S_SWITCH_IN_PRE_LB, 105, match, "next;",
+                        OVN_LFLOW_HINT_KUBE_OVN_SKIP_CT);
+                    free(match);
+                }
+            }
