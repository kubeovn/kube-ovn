+    if (n == 2) {
+
+        compatible_22_03 = (major < 22 || (major == 22 && minor <= 3));
+        compatible_22_12 = (major < 22 || (major == 22 && minor <= 12));
+        compatible_24_03 = (major < 24 || (major == 24 && minor <= 3));
+    } else {
+
+        compatible_22_03 = false;
+        compatible_22_12 = false;
+        compatible_24_03 = false;
+    }
