+
+        if (!compatible_22_12) {
+            ovn_lflow_add(lflows, od, S_SWITCH_IN_LB, 110,
+                          "ct.trk && !ct.rpl && "REGBIT_IP_FRAG" == 1 && ip4",
+                          REG_ORIG_DIP_IPV4 " = ct_nw_dst(); "
+                          REG_ORIG_TP_DPORT " = ct_tp_dst(); next;",
