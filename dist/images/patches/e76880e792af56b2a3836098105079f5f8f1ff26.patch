                   lflow_ref);
 
     ovn_lflow_add_drop_with_desc(
@@ -13411,6 +13441,10 @@ build_lrouter_icmp_packet_toobig_admin_flows(
 {
     ovs_assert(op->nbrp);
 
+    if (compatible_22_12) {
